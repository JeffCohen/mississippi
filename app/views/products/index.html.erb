<p id="notice"><%= notice %></p>

<h1>Products</h1>

<style>
  .product {
    border: solid 3px #999;
    margin: 24px;
    padding: 24px;
    width: 500px;
  }
</style>

<div class="row">
    <% @products.each do |product| %>
      <div class="product col-sm-6">
        <p><%= product.ASIN %></p>
        <p><%= number_to_currency product.price %></p>
        <h4><%= product.title %></h4>
        <p><%= product.description %></p>
        <p><%= link_to 'Add To Cart', "#", class: 'btn btn-primary' %></p>
      </div>
    <% end %>
</div>
